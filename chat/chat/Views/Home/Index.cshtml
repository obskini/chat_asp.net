@model IList<chat.Models.ChatChannelResponse>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar voor kanalen -->
        <div class="col-md-3 bg-light p-3 border-right">
            <h4>Channels</h4>
            <ul class="list-group">
                @foreach (var channel in Model)
                {
                    <li class="list-group-item">
                        <a href="@Url.Action("Chat", "Chat", new { id = channel.Id })" class="text-decoration-none">
                            @channel.Name
                        </a>
                    </li>
                }
            </ul>
        </div>

        <!-- Chat venster -->
        <div class="col-md-9">
            <div id="chat-container">
                <!-- Hier wordt de chatinhoud geladen na het klikken op een kanaal -->
                <h5>Select a channel to start chatting.</h5>
            </div>
        </div>
    </div>
</div>
